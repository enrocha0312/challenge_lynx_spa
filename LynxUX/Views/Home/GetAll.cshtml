@model List<LynxUX.Models.EquipamentoViewModel>

@{
    ViewData["Title"] = "Lista de Equipamentos";
}

<h2 style="text-align: center; color: #333;">Lista de Equipamentos</h2>

@if (ViewBag.Erro != null)
{
    <p style="color: red; text-align: center;">@ViewBag.Erro</p>
}

<table style="width: 80%; margin: auto; border-collapse: collapse; font-family: Arial, sans-serif; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);">
    <thead>
        <tr style="background-color: #4CAF50; color: white; text-align: left;">
            <th style="padding: 10px; border-bottom: 2px solid #ddd;">Instalação</th>
            <th style="padding: 10px; border-bottom: 2px solid #ddd;">Lote</th>
            <th style="padding: 10px; border-bottom: 2px solid #ddd;">Fabricante</th>
            <th style="padding: 10px; border-bottom: 2px solid #ddd;">Operadora</th>
            <th style="padding: 10px; border-bottom: 2px solid #ddd;">Modelo</th>
            <th style="padding: 10px; border-bottom: 2px solid #ddd;">Versão</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="background-color: #f9f9f9; text-align: left;">
                <td style="padding: 10px; border-bottom: 1px solid #ddd;">@item.Instalacao</td>
                <td style="padding: 10px; border-bottom: 1px solid #ddd;">@item.Lote</td>
                <td style="padding: 10px; border-bottom: 1px solid #ddd;">@item.Fabricante</td>
                <td style="padding: 10px; border-bottom: 1px solid #ddd;">@item.Operadora</td>
                <td style="padding: 10px; border-bottom: 1px solid #ddd;">@item.Modelo</td>
                <td style="padding: 10px; border-bottom: 1px solid #ddd;">@item.Versao</td>
            </tr>
        }
    </tbody>
</table>

<div style="text-align: center; margin-top: 20px;">
    <a href="@Url.Action("Index", "Home")" style="text-decoration: none; background-color: #007bff; color: white; padding: 10px 15px; border-radius: 5px; display: inline-block;">Voltar</a>
</div>
